@using LEGASY.Models
@model Seguridad_Fn_UsuarioSeleccionado_Result
@{
    ViewBag.Title = "EditarUsuario";
}

<br />
<!-- Content Header (Page header) -->
<div class="card-header" style="background-color:white;">
    <div class="col-sm-6">
        <h1>Editar Usuarios en el sistema</h1>
    </div>

</div>

<br />

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-header">
                    <div class="col-sm-10">
                        <h3 class="card-title">Datos del Usuario</h3>
                    </div>
                    <br />
                    <hr />
                    <div class="card-body pad table-responsive">

                        @*Todo el Contenido Aqui*@
                        <!-- Horizontal Form -->
                        <div class="card card-default">
                            <div class="card-header">
                                <h3 class="card-title">Formulario</h3>
                            </div>

                            @if (ViewBag.Respuesta != null)
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="alert alert-warning">
                                            @ViewBag.Respuesta

                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- /.card-header -->
                            <!-- form start -->
                            @using (Html.BeginForm())
                            {
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div class="form-group row">
                                                <label for="Name" class="col-sm-2 col-form-label">Nombre</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="NombreDesplegable" name="NombreDesplegable" placeholder="Nombre Desplegable">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="NombreCorto" class="col-sm-2 col-form-label">Nombre Usuario</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="NombreUsuario" name="NombreUsuario" placeholder="Nombre Usuario">
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group row">
                                                <label for="Descrípcion" class="col-sm-2 col-form-label">Correo</label>
                                                <div class="col-sm-10">
                                                    <input type="email" class="form-control" id="Correo" name="Correo" placeholder="Correo">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="Descrípcion" class="col-sm-2 col-form-label">Contraseña Inicial</label>
                                                <div class="col-sm-10">
                                                    <input type="text" class="form-control" id="Contraseña" name="Contraseña" placeholder="Contraseña Inicial">
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!-- /.card-body -->
                                <div class="card-footer">
                                    <div class="col-md-12">
                                        
                                            <button type="submit" class="btn btn-info"><i class="fa fa-save"></i> Guardar</button>
                                            <a class="btn btn-primary" href="@Url.Action("ModulosUsuario", "Seguridad", new {IdUsuario = Model.entryCode})">

                                                <i class="fa fa-circle-notch"></i> Modulos
                                            </a>  <a class="btn btn-primary" href="@Url.Action("PermisosUsuario", "Seguridad", new {IdUsuario = Model.entryCode})">

                                                <i class="fa fa-arrow-alt-circle-right"></i> Permisos
                                            </a>
                                            <button type="submit" class="btn btn-danger float-right"><i class="fa fa-eraser"></i> Cancelar</button>
                                        
                                       
                                    </div>
                                   
                                    
                                </div>

                                <!-- /.card-footer -->
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



